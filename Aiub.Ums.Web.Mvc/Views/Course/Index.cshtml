@model IEnumerable<Aiub.Ums.Core.Entities.Course>

@{
    ViewBag.Title = "Index";
    ViewBag.PageDescription = "Index";
}

<div class="box">
    <div class="box-body">
        @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
    </div>
</div>
<div class="box">
    <div class="box-body">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Credit)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Credit)
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section UmsScripts{
    <script>
        $(function () {
            $("#myTable").DataTable();
        });
    </script>
}