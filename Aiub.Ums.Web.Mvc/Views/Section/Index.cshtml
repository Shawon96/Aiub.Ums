@model IEnumerable<Aiub.Ums.Web.Mvc.Models.SectionCourseVM>

@{
    ViewBag.Title = "Index";
    ViewBag.PageDescription = "Index";
}

<div class="box">
    <div class="box-body">
        @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
    </div>
</div>
<div class="box">
    <div class="box-body">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Section.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Course)</th>
                    <th></th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Section.Name)
                        </td>
                        <td>
                            <a href="/Course/Details/@item.Course.Id">
                                @Html.DisplayFor(modelItem => item.Course.Name)
                                <br />Course Code:
                                @Html.DisplayFor(modelItem => item.Course.Id)
                            </a>
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Details", "Details", new { id = item.Section.Id }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Edit", "Edit", new { id = item.Section.Id }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Section.Id }, new { @class = "btn btn-default" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section UmsScripts{
    <script>
        $(function () {
            $("#myTable").DataTable();
        });
    </script>
}